<% if @order_items.any? %>
  <% @order_items.each do |item| %>
    <p><%= item.book.title %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Price: <%= number_to_currency item.book.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.book.price * item.quantity) %></p>
  <% end %>
  <p>Your Total: <%= number_to_currency current_cart.total_price %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
