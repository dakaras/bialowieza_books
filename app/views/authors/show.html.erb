<img style="-webkit-user-select: none;cursor: zoom-in;" src="https://images.wisegeek.com/two-shelves-of-books.jpg" width="1500" height="300">

<h2><%= @author.name %></h2>

<ul id='author_show'>
  <% @author.books.each do |book| %>
    <%= link_to image_tag("https://www.ioba.org/pages/wp-content/uploads/2011/12/alledgesgilt.jpg"), book_path(book) %><br><br>
    <strong> Title: </strong><h3><%= link_to book.title, author_book_path(@author, book) %></h3>
    <!-- <strong> Genre: </strong><p><%= book.genre %></p> -->

    <% if !book.price.blank? %>
      <strong> Price: </strong> <p><%= number_to_currency book.price %></p>
    <% end %>
    <!-- <% if !book.summary.blank? %>
      <strong> Summary: </strong> <p><%= book.summary %></p>
    <% end %> -->

    <%= form_for @order_item do |f| %>
      <%= f.hidden_field :book_id, value: book.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to Cart"%>
    <% end %><br>
  <% end %>
</ul>

<h3><%= link_to "Request a Book to be Ordered", new_author_book_path(@author) %></h3>
<h3><%= link_to "See Every Book by Author", authors_path %></h3>
<h3><%= link_to "See All Books", root_path %></h3>
<h3><%= link_to  "Home", root_path %></h3>
